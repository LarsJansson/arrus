{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://us4us.eu/arius-sdk/cfg/transducersList.schema.json",
    "title": "Transducers",
    "description": "List of transducer definitions.",
    "type": "object",
    "required": ["transducers"],
    "properties": {
        "transducers": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/transducerItemDefinition"
            }
        }
    },
    "transducerItemDefinition": {
        "type": "object",
        "required": ["name", "numElements", "pitch"],
        "properties": {
            "name": {
                "type": "string"
            },
            "numElements": {
                "type": "integer"
            },
            "pitch": {
                "type": "number"
            }
        }
    }
}
